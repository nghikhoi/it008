<Window x:Class="UI.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="SettingWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="40 105 30 0">
            <StackPanel Margin="0 0 0 20" Orientation="Horizontal">
                <StackPanel >
                    <TextBlock>Họ</TextBlock>
                    <TextBox x:Name="FirstNameBox" materialDesign:HintAssist.Hint="Nhập họ"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="100"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock >Tên</TextBlock>
                    <TextBox x:Name="LastNameBox" materialDesign:HintAssist.Hint="Nhập tên"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="300" />
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="0 0 0 20">
                <TextBlock>Ngày sinh</TextBlock>
                <DatePicker  materialDesign:HintAssist.Hint="Pick Date"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
            </StackPanel>
            <StackPanel Margin="0 0 0 40">
                <TextBlock>Email</TextBlock>
                <TextBox x:Name="UsernameBox" materialDesign:HintAssist.Hint="Nhập email"
                        Text="nkh@gmail.com" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            </StackPanel>
            
            <Button x:Name="ChangePassword_btn" Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Width="120"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                HorizontalAlignment="Center" 
                            Margin="0 0 20 0" >
                Đổi mật khẩu
            </Button>

            <TextBlock>Đổi mật khẩu</TextBlock>
        </StackPanel>
    </Grid>
</Window>
