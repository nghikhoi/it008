<UserControl x:Class="UI.UserControls.ucTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <DockPanel>
            <Button x:Name="ExitBtn"
                Background="Transparent"
                BorderThickness="0"
                DockPanel.Dock="Right" 
                Padding="8 0">
                <materialDesign:PackIcon Kind="WindowClose" Width="15" Height="15" Foreground="Black"/>
            </Button>
            <Button x:Name="MinimizeBtn"
                    Background="Transparent"
                    BorderThickness="0"
                    DockPanel.Dock="Right"
                    Padding="8 0" Click="MinimizeBtn_Click">
                <materialDesign:PackIcon Kind="WindowMinimize" Width="15" Height="15" Foreground="Black"/>
            </Button>
        </DockPanel>
    </Grid>
</UserControl>
