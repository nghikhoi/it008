<Window x:Class="UI.MediaGalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
        xmlns:local="clr-namespace:UI"
        xmlns:uc ="clr-namespace:UI.Components"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="{x:Null}" 
        AllowsTransparency="True" MinHeight="300" MinWidth="400" 
        Title="MediaGalleryWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="0"
        ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <!--<Border Style="{StaticResource OriginalBorder}" x:Name="WindowOutline" Background="{DynamicResource BackgroundResource}">-->
    <Border Margin="1" CornerRadius="8" x:Name="Round" Background="{DynamicResource BackgroundResource}">
        <uc:MediaGallery/>
    </Border>
    <!--</Border>-->
</Window>
