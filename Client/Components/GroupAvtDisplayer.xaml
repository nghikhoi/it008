<UserControl x:Class="UI.Components.GroupAvtDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Components="clr-namespace:UI.Components"
             xmlns:local="clr-namespace:UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="120">
    <Grid>
        <Components:AvatarDisplayer Height="80" Width="80" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Components:AvatarDisplayer Height="80" Width="80" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Ellipse Height="15" Width="15" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Ellipse.Fill>
                <SolidColorBrush Color="Green"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
