<UserControl x:Class="UI.Components.GroupAvtDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Components="clr-namespace:UI.Components"
             xmlns:local="clr-namespace:UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Canvas>
        <Components:AvatarDisplayer Height="35" Width="35" UserID="{Binding UserOne}" Canvas.Left="14"
                                    />
        <Components:AvatarDisplayer Height="35" Width="35" UserID="{Binding UserTwo}" Canvas.Top="14"
                                    />
        <Ellipse Height="5" Width="5" Canvas.Left="44" Canvas.Top="45" >
            <Ellipse.Fill>
                <SolidColorBrush Color="Green"/>
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
</UserControl>
