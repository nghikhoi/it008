<UserControl x:Class="UI.Components.ucChatItemSender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Components"
             xmlns:ui="clr-namespace:UI"
             mc:Ignorable="d"
             >
    <Grid Margin="12 0 0 0">
        <local:ucAvatarSender Loaded="ucAvatarSender_Loaded" ></local:ucAvatarSender>
        <Border Margin="40 0 0 0" x:Name="message_border" CornerRadius="15" Background="{StaticResource PrimaryHueDarkBrush}">

            <TextBlock x:Name="text_msg_content" VerticalAlignment="Center" TextWrapping="Wrap" 
                           Grid.IsSharedSizeScope="True"
                           Text="Hi i am huyen ne" FontSize="18" 
                           Foreground="White" Padding="14">
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
