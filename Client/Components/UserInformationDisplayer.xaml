                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Email" Width="24"
                                                                     Height="24" Margin="0 0 10 0" />
                                            <TextBlock x:Name="EmailTxb" VerticalAlignment="Center">nkh123@gmail.com</TextBlock>
                                        </StackPanel>
                                    </TextBlock>
                <TextBlock Height="120" FontSize="16" Margin="-12 0 0 0" HorizontalAlignment="Center" TextWrapping="Wrap" >
