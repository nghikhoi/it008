<UserControl x:Class="UI.ucChatItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             xmlns:components="clr-namespace:UI.Components"
             mc:Ignorable="d" 
             d:DesignWidth="300" MinWidth="40">
    <Grid>
        <Border x:Name="message_border" CornerRadius="15" Background="{StaticResource PrimaryHueDarkBrush}" Margin="0 0 10 6" MinWidth="40">
            <TextBlock x:Name="text_msg_content" VerticalAlignment="Center" TextWrapping="Wrap" 
                       Grid.IsSharedSizeScope="True"
                       Text="Hi i am huyen ne" FontSize="18" 
                       Foreground="White" Padding="10">
            </TextBlock>
        </Border>
        <Ellipse x:Name="Emotion" Width="18" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Visibility="Visible">
            <Ellipse.Fill>
                <ImageBrush ImageSource="../../Images/avt.jpg"></ImageBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
