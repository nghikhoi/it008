<UserControl x:Class="UI.ucChatItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             xmlns:components="clr-namespace:UI.Components"
             mc:Ignorable="d" 
             d:DesignWidth="300" >

    
        <Grid MaxWidth="300" Margin=" 0 5 0 0">
            <Border x:Name="message_border" CornerRadius="15" Background="{StaticResource PrimaryHueDarkBrush}">
                
                <TextBlock x:Name="text_msg_content" VerticalAlignment="Center" TextWrapping="Wrap" 
                           Grid.IsSharedSizeScope="True"
                           Text="Hi i am huyen ne" FontSize="18" 
                           Foreground="White" Padding="14">
                </TextBlock>
            </Border>
        </Grid>
    
    
</UserControl>
