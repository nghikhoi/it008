<UserControl x:Class="UI.Components.ImageMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <Grid MouseEnter="{Binding ImageMsgShowCtrl}" MouseLeave="{Binding ImageMsgHideCtrl}">
            <Image x:Name="ImageControl" Stretch="UniformToFill" Margin="0.2,0.2,0.2,0.2">


            </Image>
            <Button Width="50" Height="50" Background="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Top"
                    BorderBrush="{x:Null}" Click="{Binding ImageMsgOpenWin}">
                <materialDesign:PackIcon x:Name="fullsrnicon" Kind="Fullscreen" Opacity="0"></materialDesign:PackIcon>
            </Button>
        </Grid>
    </Border>

</UserControl>