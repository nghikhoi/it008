<UserControl x:Class="UI.Components.NonResizeTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:UI.Components"
             mc:Ignorable="d" 
             x:Name="TitleBar" Foreground="{DynamicResource ForegroundResource}">

    <!--Q: Border Close_Btn-->
    <Grid>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{x:Static local:TitleBarCommand.MouseMoveWindowCommand}"
                                       CommandParameter="{Binding ElementName=TitleBar}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Border Background="Transparent" Style="{StaticResource OriginalBorder}">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="false" VerticalAlignment="Top">
                <Border CornerRadius="8" Width="30" Height="30" DockPanel.Dock="Right">
                    <Button Style="{StaticResource TitlebarButton}"
                         x:Name="btnClose"
                        Command="{x:Static local:TitleBarCommand.CloseWindowCommand}"
                        CommandParameter="{Binding ElementName=TitleBar}">
                        <materialDesign:PackIcon Kind="WindowClose" Width="15" Height="15" Foreground="{DynamicResource ForegroundResource}"/>
                    </Button>
                </Border>
                <Border Width="30" Height="30" DockPanel.Dock="Right">
                    <Button Style="{StaticResource TitlebarButton}"
                         x:Name="btnMinimize"
                        Command="{x:Static local:TitleBarCommand.MinimizeWindowCommand}"
                        CommandParameter="{Binding ElementName=TitleBar}">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="15" Height="15" Foreground="{DynamicResource ForegroundResource}"/>
                    </Button>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>

